<div class="row">
    <div class="col">
        <h1 class="text-center">{{title}}</h1>
        <h5 class="text-center">by {{authors}}</h5>
        <h2>Reviews</h2>
    </div>
</div>
{{#if noReviews}}
    <div class="d-flex justify-content-center">
        <div class="alert alert-danger col-5 text-center">
            This book has no review yet
        </div>
    </div>
{{else}}
    <div class="row">
        {{#each q.results}}
        <div class="card mb-1">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="col">
                        <blockquote class="blockquote mb-0">
                            <p>{{this.summary}}</p>
                            <footer class="blockquote-footer"><cite title="Source Title">{{this.byline}}</cite></footer>
                        </blockquote>

                    </div>
                    <div class="col-1 align-self-center">
                        <a href="{{this.url}}" target="_blank" class="btn btn-primary">Full Review</a>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted text-right">
                Published on: {{publication_dt}}
            </div>
        </div>
        {{/each}}
    </div>
{{/if}}

<div class="d-flex justify-content-center mt-5">
    <a href="#" class="btn btn-primary" onclick="window.history.back()">Back</a>
</div>

{{#if noReviews}}
{{else}}
<div class="alert alert-secondary mt-5" role="alert">
    {{q.copyright}}
</div>
{{/if}}
