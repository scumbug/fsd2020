<div class="row mt-5 justify-content-center">
    <h1>FSD Marvel</h1>
</div>
    <div class="d-flex justify-content-between mb-5">
        {{#if prevPage}}
        <a href="/{{prevPage}}" class="btn btn-primary">Previous</a>
        {{else}}
        <a href="/{{prevPage}}" class="btn btn-primary disabled">Previous</a>
        {{/if}}
        {{#if finalPage}}
        <a href="/{{nextPage}}" class="btn btn-primary">Next</a>
        {{else}}
        <a href="/{{nextPage}}" class="btn btn-primary disabled">Next</a>
        {{/if}}
    </div>
<div class="row row-cols-1 row-cols-md-3">
    {{#each results}}
    <div class="col mb-4">
        <div class="card">
            <img src="{{this.thumbnail.path}}/standard_xlarge.{{this.thumbnail.extension}}" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <a href="/detail/{{this.tvid}}" class="btn btn-primary">Read more</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<div class="d-flex justify-content-between mb-5">
    {{#if prevPage}}
    <a href="/{{prevPage}}" class="btn btn-primary">Previous</a>
    {{else}}
    <a href="/{{prevPage}}" class="btn btn-primary disabled">Previous</a>
    {{/if}}
    {{#if finalPage}}
    <a href="/{{nextPage}}" class="btn btn-primary">Next</a>
    {{else}}
    <a href="/{{nextPage}}" class="btn btn-primary disabled">Next</a>
    {{/if}}
</div>