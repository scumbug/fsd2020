<form action="/add" method="POST">
    <div class="form-group">
        <label for="productName">Name: </label>
        <input type="text" name="productName" class="form-control">
    </div>

    <div class="form-row">
        <div class="form-group col">
            <label for="productQuantity" class="row-form-label">Quantity: </label>
            <input type="number" name="productQuantity" class="form-control">
        </div>
        
        <div class="form-group col">
            <label for="productPrice">Price:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="text" class="form-control" name="productPrice" >
            </div>
        </div>    
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>

    <input type="hidden" name="savecart" value="{{ savecart }}">
</form>

<table class="table table-striped">
<thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Quantity</th>
    <th scope="col">Price</th>
  </tr>
</thead>
<tbody>
{{#each cart}}
  <tr>
    <td>{{this.productName}}</td>
    <td>{{this.productQuantity}}</td>
    <td>{{this.productPrice}}</td>
  </tr>
{{/each}}
</tbody>
</table>